@model ProjectDetailView
<div class="card-body">
    <div class="card mb-3 p-3 border-info">
        <form id="_detailMain" method="post">
            <input asp-for="Id" hidden />
            <div class="p-1 mt-2">
                <!-- Row for ProjectName with label on the left and input filling the rest of the space -->
                <div class="row mb-1 p-0">
                    <div class="d-flex align-items-center">
                        <label asp-for="ProjectName" class="me-2" style="min-width: 150px;"></label>
                        <input asp-for="ProjectName" class="form-control flex-grow-1" placeholder="Project Name" type="text" readonly />
                    </div>
                </div>
            </div>           
            <div class="row mb-1 p-1">
                <div class="d-flex align-items-center">
                    <label asp-for="ProjectSummary" class="me-2" style="min-width: 150px;"></label>
                    <textarea asp-for="ProjectSummary" class="form-control flex-grow-1" rows="1" placeholder="Short Summary" readonly></textarea>
                </div>
            </div>
            <div class="p-1">
                <div class="row mb-3 p-1">
                    <div class="d-flex align-items-center">
                        <label asp-for="ProjectDescription" class="me-2" style="min-width: 150px;"></label>
                        <textarea asp-for="ProjectDescription" class="form-control flex-grow-1" rows="4" placeholder="Project Description" readonly></textarea>
                    </div>
                </div>
            </div>

            <!-- Row for ProjectState and ProjectStartDate on the left, ProjectDueDate and ProjectCompletedDate on the right -->
            <div class="p-1">
                <div class="row mb-1 p-1">
                    <!-- Left side with ProjectState and ProjectStartDate -->
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <label asp-for="ProjectState" class="me-2" style="min-width: 150px;"></label>
                            <div class="col-md-6"> <!-- Adjust the column width as needed -->
                                <input asp-for="ProjectState" class="form-control flex-grow-1" placeholder="Project State" type="text" readonly>
                            </div>
                        </div>

                        <div class="d-flex align-items-center">
                            <label asp-for="ProjectStartDate" class="me-2" style="min-width: 150px;"></label>
                            <!-- HTML for Datepicker -->
                            <div class="col-md-6">
                                <div class="input-group date">
                                    <input asp-for="ProjectStartDate" type="text" class="form-control" placeholder="mm/dd/yyyy" readonly />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right side with ProjectDueDate and ProjectCompletedDate -->
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3 justify-content-end">
                            <label asp-for="ProjectDueDate" class="me-2" style="min-width: 150px;"></label>
                            <div class="col-md-6">
                                <div class="input-group date">
                                    <input asp-for="ProjectDueDate" type="text" class="form-control" placeholder="mm/dd/yyyy" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="d-flex align-items-center justify-content-end">
                            <label asp-for="ProjectCompletedDate" class="me-2" style="min-width: 150px;"></label>
                            <div class="col-md-6">
                                <div class="input-group date">
                                    <input asp-for="ProjectCompletedDate" type="text" class="form-control" placeholder="mm/dd/yyyy" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card-body">
    <div class="card mb-3 p-3 border-info">
        <!--the Javascript is on the Detail page-->
        <form action="">
            <div class="">
                <div class="row mb-3 p-0">
                    <div class="d-flex align-items-center">
                        <label class="me-2" style="min-width: 150px;">Tasks</label>
                        <select class="form-select form-control flex-grow-1" id="taskDropdown">
                            <option value="">---Select a task---</option>
                            @foreach (var task in Model.ProjectTasks)
                            {
                                <option value="@task.Id">
                                    @task.ProjectTaskName - @task.ProjectTaskState
                                </option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>