@model ProjectTaskView
@{
    ViewData["Title"] = "Task Detail";
    var tableActive ="table-default";
}
<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card mb-3">
            <h1 class="card-header">
                <a class="back-button" asp-area="Visitor" asp-controller="Project" asp-action="Detail" asp-route-id="@Model.ProjectId">
                    <i class="bi bi-arrow-left-circle"></i>
                </a>
                Task Detail
            </h1>

            <div class="card-body p-3">
                <form id="_detailMain" method="post">
                    <input asp-for="Id" hidden />
                    <div class="p-1 mt-2">
                        <!-- Row for ProjectName with label on the left and input filling the rest of the space -->
                        <div class="row mb-1 p-0">
                            <div class="d-flex align-items-center">
                                <label asp-for="@Model.ProjectTaskName" class="me-2" style="min-width: 150px;">Task Name</label>
                                <input asp-for="@Model.ProjectTaskName" class="form-control flex-grow-1" placeholder="ProjectTask Name" type="text" readonly />
                            </div>
                        </div>
                    </div>           
                    <div class="p-1">
                        <div class="row mb-3 p-1">
                            <div class="d-flex align-items-center">
                                <label asp-for="@Model.ProjectTaskDescription" class="me-2" style="min-width: 150px;">Description</label>
                                <textarea asp-for="@Model.ProjectTaskDescription" class="form-control flex-grow-1" rows="4" placeholder="Project Description" readonly></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Row for ProjectState and ProjectStartDate on the left, ProjectDueDate and ProjectCompletedDate on the right -->
                    <div class="p-1">
                        <div class="row mb-1 p-1">
                            <!-- Left side with ProjectState and ProjectStartDate -->
                            <div class="col-md-6">
                                <div class="d-flex align-items-center mb-3">
                                    <label asp-for="@Model.ProjectTaskState" class="me-2" style="min-width: 150px;">State</label>
                                    <div class="col-md-6"> <!-- Adjust the column width as needed -->
                                        <input asp-for="@Model.ProjectTaskState" class="form-control flex-grow-1" placeholder="Project State" type="text" readonly>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center">
                                    <label asp-for="@Model.ProjectTaskStartDate" class="me-2" style="min-width: 150px;">Start Date</label>
                                    <!-- HTML for Datepicker -->
                                    <div class="col-md-6">
                                        <div class="input-group date">
                                            <input asp-for="@Model.ProjectTaskStartDate" type="text" class="form-control" placeholder="mm/dd/yyyy" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Right side with ProjectDueDate and ProjectCompletedDate -->
                            <div class="col-md-6">
                                <div class="d-flex align-items-center mb-3 justify-content-end">
                                    <label asp-for="@Model.ProjectTaskDueDate" class="me-2" style="min-width: 150px;">Due Date</label>
                                    <div class="col-md-6">
                                        <div class="input-group date">
                                            <input asp-for="@Model.ProjectTaskDueDate" type="text" class="form-control" placeholder="mm/dd/yyyy" readonly />
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center justify-content-end">
                                    <label asp-for="@Model.ProjectTaskCompletedDate" class="me-2" style="min-width: 150px;">Completed Date</label>
                                    <div class="col-md-6">
                                        <div class="input-group date">
                                            <input asp-for="@Model.ProjectTaskCompletedDate" type="text" class="form-control" placeholder="mm/dd/yyyy" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            @* <h4 class="mt-5">Activity Notes:</h4> *@
            <div class="card-body">
                <div class="card mb-3 border-info">
                    <ul class="list-group flex-grow-1 mb-2 list-group-flush">
                        @foreach (var item in Model.ProjectTaskActivities)
                        {
                            <li class="list-group-item list-group-item-default d-flex justify-content-between align-items-center">
                                @item.ActivityNote
                                <span class="badge bg-primary rounded-pill">@item.CreatedDate</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>            
        </div>
    </div>
</div>