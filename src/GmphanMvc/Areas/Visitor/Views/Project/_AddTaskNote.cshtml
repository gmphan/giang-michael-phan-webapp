@model ProjectTaskActivity
<!-- Form to Add Task Note -->
<form id="addTaskNote" method="post" asp-action="AddTaskNote" asp-controller="Project" asp-area="Visitor">
    @* <input asp-for="Id" hidden /> *@
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProjectTaskId" />
    <div class="p-1 mt-2">
        <div class="d-flex align-items-center">
            <label asp-for="ActivityNote" class="me-2" style="min-width: 150px;">Activity Note</label>
            <textarea asp-for="ActivityNote" class="form-control flex-grow-1" rows="3" placeholder="Activity Note"></textarea>
        </div>
    </div>
    <div class="row mb-3 p-1">
        <div class="col-md-12 d-flex justify-content-center">
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary form-control">
                    <i class="bi bi-floppy"></i> Save
                </button>
            </div>
        </div>
    </div>
</form>