@model ProjectListView
@{
    ViewData["Title"] = "Projects";
    var projects = Model.ProjectViews;
    var tableActive = "table-default";
}
<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card mb-3">
            <h1 class="card-header">Projects</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                    <th scope="col">Name</th>
                    <th scope="col">State</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">Completed Date</th>
                    <th scope="col">Summary</th>
                    <th scope="col">View Detail</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var proj in projects)
                    {
                        @if(tableActive == "table-default")
                        {
                            tableActive = "table-active";
                        }
                        else
                        {
                            tableActive = "table-default";
                        }
                        <tr class="@(tableActive == "table-default" ? "table-default" : "table-active")">
                            <td>@proj.ProjectName</td>
                            <td>@proj.ProjectState</td>
                            <td>@proj.ProjectStartDate</td>
                            <td>@proj.ProjectDueDate</td>
                            <td>@proj.ProjectCompletedDate</td>
                            <td>
                                @proj.ProjectSummary
                            </td>
                            <td>
                                <a  asp-area="Visitor" asp-controller="Project" asp-action="Detail" asp-route-id="@proj.Id" class="card-link mx-2">
                                    View Detail
                                </a>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
            <div class="card-footer text-muted">
                List of Projects
            </div>
        </div>
    </div>
</div>