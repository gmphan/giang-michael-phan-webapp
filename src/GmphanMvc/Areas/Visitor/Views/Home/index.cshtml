@section Scripts{
    <script>
        // This whole script is for svg banner.
        // Assuming quoteCollection is passed from Razor to JavaScript via JSON
        var quoteCollection = @Html.Raw(Json.Serialize(quoteCollections));
        //console.log("Quotes:", quoteCollection); // Debugging log

        // Get the SVG container dimensions
        const svgElement = document.querySelector("svg");
        const svgWidth = svgElement.viewBox.baseVal.width;


        // Function to dynamically resize text to fit within the SVG width
        function fitTextToWidth(element, maxWidth) {
            let fontSize = parseFloat(window.getComputedStyle(element).fontSize);
            while (element.getBBox().width > maxWidth && fontSize > 10) {
                fontSize -= 1; // Decrease font size
                element.style.fontSize = fontSize + "px"; // Apply new font size
            }
            return fontSize; // Return the final font size
        }

        // Current index of the displayed quote
        var currentIndex = 0;

        // Function to show the current quote in the SVG
        function showQuote(index) {
            const quoteTextElement = document.getElementById("quoteLine");
            const authorLineElement = document.getElementById("authorLine");
            const quote = quoteCollection[index];
            //console.log("Displaying quote:", quote); // Debug log
            quoteTextElement.textContent = quote.quote;
            //console.log("Quote:", quoteTextElement.textContent)
            authorLineElement.textContent = `- ${quote.author}`;

            // Reset font size to default before resizing
            quoteTextElement.style.fontSize = "18px";

            // Dynamically resize the quote text to fit within the SVG width
            const finalQuoteFontSize = fitTextToWidth(quoteTextElement, svgWidth - 20); // Add padding of 20

            // Set the author text font size to half of the final quote font size
            authorLineElement.style.fontSize = (finalQuoteFontSize / 2) + "px";

            // Dynamically resize the author text if necessary
            fitTextToWidth(authorLineElement, svgWidth - 20); // Add padding of 20
        }

        // Slideshow function that rotates the quotes
        function startSlideshow() {
            showQuote(currentIndex);
            currentIndex = (currentIndex + 1) % quoteCollection.length; // Loop back to the first quote
            setTimeout(startSlideshow, 3000); // Change quote every 3 seconds
        }

        // Start the slideshow when the page loads
        window.onload = function() {
            if (quoteCollection.length > 0) {
                startSlideshow();
            } else {
                console.log("No quotes available.");
            }
        };
    </script>
}