@model ContactMe

<form method="post" asp-action="ContactMe" asp-controller="About" asp-area="Visitor">
    <div class="p-2 mt-3">
        <input asp-for="FirstName" type="text" class="form-control line-input" placeholder="First Name">
    </div>
    <div class="p-2 mt-3">
        <input asp-for="LastName" type="text" class="form-control line-input form-control-lg" placeholder="Last Name" id="inputLarge">
    </div>
    <div class="p-2 mt-3">
        <input asp-for="Email" type="email" class="form-control line-input form-control-lg" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" id="inputLarge">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="p-2 mt-3">
        <input asp-for="PhoneNum" type="text" class="form-control line-input form-control-lg" placeholder="Phone Number" id="inputLarge">
        <small id="phoneNum" class="form-text text-muted">We'll never share your number with anyone else.</small>
    </div>
    <div class="p-2 mt-3">
        <textarea asp-for="Message" class="form-control line-input form-control-lg" id="exampleTextarea" rows="3" placeholder="Message" id="inputLarge"></textarea>
    </div>
    <div class="row mt-3 mb-3 p-1">
        <div class="col-md-12 d-flex justify-content-center">
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary form-control ">
                    <i class="bi bi-send"></i>  Send
                </button>
            </div>
        </div>
    </div>
</form>
