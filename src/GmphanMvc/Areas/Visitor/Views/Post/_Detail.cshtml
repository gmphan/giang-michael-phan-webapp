@model PostDetailView


<div class="card-body">
  @* <h4 class="card-title">@Model.Title</h4> *@
  <div class="d-flex justify-content-between align-items-center">
      <h6 class="card-subtitle text-muted">By @Model.Author on @Model.PublishedDate.ToShortDateString()</h6>
      <small>
          <a asp-area="Visitor" asp-controller="Post" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mx-2"> 
              <i class="bi bi-pencil-square"></i>
          </a>
          @* <a asp-area="Visitor" asp-controller="Post" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mx-2"> 
              <i class="bi bi-trash3"></i>
          </a> *@
      </small>
  </div>
  <p class="card-text">@Model.Summary</p>
  <div>@Html.Raw(@Model.Content)</div>
</div>
