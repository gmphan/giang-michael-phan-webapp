@model Post 
@{
    ViewData["Title"] = "Create Post";
}
<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1>Create New Post</h1>
                @* <small>
                    <a asp-area="Visitor" asp-controller="Post"  asp-action="Create" class="btn btn-primary mx-2"> 
                        <i class="bi bi-plus-square"> New Post</i>
                    </a>
                </small> *@
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="p-1 mt-2">
                        <!-- Row for Title with label on the left and input filling the rest of the space -->
                        <div class="row mb-1 p-0">
                            <div class="d-flex align-items-center">
                                <label asp-for="Title" class="me-2" style="min-width: 150px;"></label>
                                <input asp-for="Title" class="form-control flex-grow-1" placeholder="Post Title" type="text">
                            </div>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="p-1 mt-2">
                        <div class="row mb-1 p-0">
                            <div class="d-flex align-items-center">
                                <label asp-for="Author" class="me-2" style="min-width: 150px;"></label>
                                <input asp-for="Author" class="form-control flex-grow-1" placeholder="Post Author" type="text">
                            </div>
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="p-1 mt-2">
                        <div class="row mb-1 p-0">
                            <div class="d-flex align-items-center">
                                <label asp-for="PublishedDate" class="me-2" style="min-width: 150px;"></label>
                                <input asp-for="PublishedDate" class="form-control flex-grow-1" placeholder="Published Date" type="date">
                            </div>
                            <span asp-validation-for="PublishedDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="p-1 mt-2">
                        <div class="row mb-1 p-0">
                            <div class="d-flex align-items-center">
                                <label asp-for="Summary" class="me-2" style="min-width: 150px;"></label>
                                <input asp-for="Summary" class="form-control flex-grow-1" placeholder="Post Summary" type="text">
                            </div>
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="p-1 mt-2">
                        <div class="row mb-1 p-0">
                            <div class="d-flex align-items-center">
                                <label asp-for="Content" class="me-2" style="min-width: 150px;"></label>
                                <textarea asp-for="Content" class="form-control flex-grow-1" rows="5" placeholder="Content in Markdown format" type="text"></textarea>
                            </div>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="p-1 mt-2">
                        <div class="row mb-1 p-0">
                            <div class="d-flex align-items-center">
                                <label asp-for="Tags" class="me-2" style="min-width: 150px;"></label>
                                <input asp-for="Tags" class="form-control flex-grow-1" placeholder="Tags separated by ;" type="text">
                            </div>
                            <span asp-validation-for="Tags" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3 p-1">
                        <div class="col-md-12 d-flex justify-content-center">
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-secondary form-control">
                                    <i class="bi bi-floppy"></i>  Save
                                </button>
                            </div>
                            @* <div class="col-md-4 ms-2">
                                <a asp-area="Visitor" asp-controller="Project" asp-action="Index" class="btn btn-info form-control">
                                    Back to Project 
                                </a>
                            </div> *@
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 