@model ResumeView
@{
    ViewData["Title"] = "Resume";
    var resumeHeader = Model.ResumeHeader;
    var resumeSummary = Model.ResumeSummary;
    var resumeExperiences = Model.ResumeExperiences;
}
<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card mb-3">
            <h1 class="card-header">Resume Admin</h1>
            <div class="card-body text-center">
                <h2 class="card-title">@resumeHeader.FirstName @resumeHeader.LastName</h2>
                <h5 class="card-subtitle text-muted"><i>@resumeHeader.Headline</i></h5>
                <p class="card-text">
                    <a href= "mailto: Gmphan7@gmail.com"> Gmphan7@gmail.com </a><br/>
                    @resumeHeader.PhoneNum <br/>
                    @resumeHeader.City, @resumeHeader.State, @resumeHeader.ZipCode <br/>
                </p>
                <a href="@resumeHeader.LinkedIn" class="card-link">LinkedIn</a>
                <a href="@resumeHeader.GitHub" class="card-link">GitHub</a> <br/>
                <a  asp-area="Admin" asp-controller="ResumeHeaderAdmin" asp-action="Edit" class="btn btn-primary mx-2">
                    <i class="bi bi-pencil-square"></i>
                </a>
                @*<a asp-area="Admin" asp-controller="QuoteAdmin" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"> 
                    <i class="bi bi-trash3"></i>
                </a> *@
            </div>
            <div class="card border-primary mb-3 mx-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>Quote Collection Admin</h3> 
                    <small>
                        <a asp-area="Admin" asp-controller="ResumeSummaryAdmin" asp-action="Edit" class="btn btn-primary mx-2"> 
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </small>
                </div>
                <div class="card-body">
                    @* <h4 class="card-title">Primary card title</h4> *@
                    <p class="card-text">@resumeSummary.Summary</p>
                </div>
            </div>
            <div class="card border-primary mb-3 mx-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>Work Experiences</h3>
                    <small>
                        <a asp-area="Admin" asp-controller="ResumeExperienceAdmin" asp-action="Create" class="btn btn-primary mx-2"> 
                            <i class="bi bi-plus-square"></i>
                        </a>
                    </small>
                </div>
                <div class="card-body">
                    @foreach (var item in resumeExperiences)
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h4 class="card-title">@item.Title - ID:@item.Id</h4>
                                    <small>
                                        <a asp-area="Admin" asp-controller="ResumeExperienceAdmin" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"> 
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-area="Admin" asp-controller="ResumeExperienceAdmin" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"> 
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    </small>
                                </div>
                                
                                <h6 class="card-subtitle mb-2 text-muted"><i>@item.Company, @item.City, @item.State, @item.Country</i></h6>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <i>
                                        @item.FromMonth, @item.FromYear - 
                                        @{
                                            if (item.CurrentlyWorkHere)
                                            {
                                                <text>Currently work here.</text>
                                            }
                                            else
                                            {
                                                <text>@item.ToMonth, @item.ToYear</text>
                                            }
                                        }
                                    </i>
                                </h6>
                                <ul>
                                    @foreach(var des in @item.Descriptions)
                                    {
                                        <li>
                                            @des.DescriptionText
                                        </li>
                                    }
                                </ul>
                                <p class="card-text"></p>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="card border-primary mb-3 mx-3">
                <div class="card-header"><h3>Education</h3></div>
                <div class="card-body">
                    @* <h4 class="card-title">Primary card title</h4> *@
                    <p class="card-text"></p>
                </div>
            </div>
            <div class="card border-primary mb-3 mx-3">
                <div class="card-header"><h3>Skills</h3></div>
                <div class="card-body">
                    @* <h4 class="card-title">Primary card title</h4> *@
                    <p class="card-text">skill list</p>
                </div>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
    </div>
</div>
