@model List<ProjectView>
@{
    ViewData["Title"] = "Project Admin";
    var projects = Model;
    var tableActive = "table-primary";
}
<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Project Admin</h3>
                <small>
                    <a asp-area="Admin" asp-controller="ProjectAdmin"  asp-action="Create" class="btn btn-primary mx-2"> 
                        <i class="bi bi-plus-square"></i>
                    </a>
                </small>
            </div>
            
            <table class="table table-hover">
                <thead>
                    <tr>
                    <th scope="col">Name</th>
                    <th scope="col">State</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">Completed Date</th>
                    <th scope="col">Summary</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var proj in projects)
                    {
                        @if(tableActive == "table-primary")
                        {
                            tableActive = "table-secondary";
                        }
                        else
                        {
                            tableActive = "table-primary";
                        }
                        <tr class="@(tableActive == "table-primary" ? "table-primary" : "table-secondary")">
                            <td>@proj.ProjectName</td>
                            <td>@proj.ProjectState</td>
                            <td>@proj.ProjectStartDate</td>
                            <td>@proj.ProjectDueDate</td>
                            <td>@proj.ProjectCompletedDate</td>
                            <td>
                                @* <a  asp-area="Admin" asp-controller="ProjectAdmin" asp-action="Activity" asp-route-id="@proj.Id" class="card-link mx-2">
                                    @proj.ProjectSummary
                                </a> *@
                                <a  asp-area="Admin" asp-controller="ProjectAdmin" asp-action="Detail" asp-route-id="@proj.Id" class="card-link mx-2">
                                    @proj.ProjectSummary
                                </a>
                                
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
            
            <div class="card-footer text-muted">
                Footer
            </div>
        </div>
    </div>
</div>