@model ProjectDetailView
<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card mb-3">
            <h2 class="card-header">Project Detail</h2>
            <div>
                @Html.Partial("_DetailMain", Model)
            </div>
            <div id="taskDetailSection">
                <!-- Task details will be loaded here dynamically -->
            </div>
            
        </div>
    </div>
</div>

@section Scripts{
    <!--this part is for adding activity note in real time-->

    <script>
        // Function to initialize the note form after content is loaded
        // this funciton is called iniside $('#taskDropdown').change(function () 
        // because the content not ready until a task is selected.
        function initializeNoteForm() {
            $('#newNoteForm').on('submit', function (event) {
                event.preventDefault(); // Prevent the default form submission
                var formData = {
                    taskId: parseInt($('input[name="taskId"]').val(), 10),  // Convert taskId to integer
                    note: $('textarea[name="note"]').val(),
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() // Include anti-forgery token
                };
                @* console.log('Form action URL: ' + $(this).attr('action')); *@
                $.ajax({
                    url: $(this).attr('action'), // URL is set from asp-action="YourAction"
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        alert('Note added successfully');
                        
                        // Assuming the response contains the updated HTML for the task activities list:
                        $('#taskActivitiesList').html(response);

                        // Clear the textarea after adding the note
                        $('textarea[name="note"]').val('');
                    },
                    error: function (xhr, status, error) {
                        console.log("Error occurred:", error);
                        console.log("Status:", status);
                        console.log("XHR:", xhr);
                        alert('Failed to add note: ' + xhr.responseText);
                    }
                });
            });
        }        
    </script>

    <!--this is to update Task Detail
    Need to call this function to add the submit function
    to the DOM because it was not present at the beginning 
    until a task is selected.
    -->
    <script>
        function initializeTaskDetailForm(){
            $('#_taskDetail').submit(function (event) {
                event.preventDefault(); // Prevent default form submission
                $.ajax({
                    type: "POST",
                    url: $(this).attr('action'), // controller and action
                    data: $(this).serialize(), // Serialize form data
                    success: function (result) {
                        console.log(result)
                        alert('Project task detail saved successfully');
                    },
                    error: function (xhr, status, error) {
                        console.log("Error occurred: " + error);
                    }
                });
            });
        }
    </script>

    <!--this part is for updating project detail in real time-->
    <script>
        $(document).ready(function () {
            $('#_detailMain').submit(function (event) {
                event.preventDefault(); // Prevent default form submission
                
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("_DetailMain", "ProjectAdmin")', // controller and action
                    data: $(this).serialize(), // Serialize form data
                    success: function (result) {
                        alert('Project detail saved successfully');
                    },
                    error: function (xhr, status, error) {
                        console.log("Error occurred: " + error);
                    }
                });
            });
        });
    </script>

    <!---this is how when a task selected, it's details would show up.--->
    <script>
        $(document).ready(function () {
            // Listen for changes in the task dropdown
            $('#taskDropdown').change(function () {
                var selectedTaskId = $(this).val(); // Get the selected task ID

                if (selectedTaskId) {
                    // Make an AJAX call to the controller
                    $.ajax({
                        url: '/Admin/ProjectAdmin/_TaskDetail/' + selectedTaskId,  // Controller action URL
                        type: 'GET',
                        //data: { selectedTaskId },  // Pass the selected task ID
                        success: function (result) {
                            // Replace the section with the result (partial view or data)
                            $('#taskDetailSection').html(result);

                            // Initialize the newNoteForm after content is loaded
                            initializeNoteForm();

                            // Initialize the _taskDetail after content is loaded by selecting a task
                            initializeTaskDetailForm();
                        },
                        error: function (xhr, status, error) {
                            console.log("Error occurred: " + error);
                        }
                    });
                } else {
                    // Handle the case when no task is selected (optional)
                    $('#taskActivitySection').html('<p>Please select a task.</p>');
                }
            });
        });
    </script>

    <!--this is to bring project id and render form into _CreateTask modal-->
    <script>
        $(document).ready(function () {
            // Bind click event to the button that triggers the modal
            $('button[data-bs-target="#newTaskModal"]').click(function () {
                console.log("here after click modal button")
                // Get the ProjectId from the data attribute
                var projectId = $(this).data('project-id');
                console.log("Project ID", projectId)
                // Clear any previous content in the modal
                $('#newTaskModal .modal-body').html('Loading...');

                // Make AJAX request to the controller to fetch the CreateTask partial view
                $.ajax({
                    url: '@Url.Action("_CreateTask", "ProjectAdmin")', // controller and action
                    type: 'GET',
                    data: { projectId: projectId }, // Send the ProjectId as a query parameter
                    success: function (result) {
                        // Inject the returned HTML (Partial View) into the modal body
                        $('#newTaskModal .modal-body').html(result);

                        // Show the modal once the content is loaded
                        $('#newTaskModal').modal('show');
                    },
                    error: function (xhr, status, error) {
                        console.log("Error: " + error);
                        alert("Failed to load task creation form.");
                    }
                });
            });
        });
    </script>
