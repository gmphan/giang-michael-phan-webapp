@model ProjectDetailView
<div class="card-body">
    <div class="card mb-3 p-3 border-info">
        <form id="_detailMain" asp-action="_DetailMain" asp-controller="ProjectAdmin" method="post">
            <input asp-for="Id" hidden />
            <div class="p-1 mt-2">
                <!-- Row for ProjectName with label on the left and input filling the rest of the space -->
                <div class="row mb-1 p-0">
                    <div class="d-flex align-items-center">
                        <label asp-for="ProjectName" class="me-2" style="min-width: 150px;"></label>
                        <input asp-for="ProjectName" class="form-control flex-grow-1" placeholder="Project Name" type="text">
                    </div>
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>
            </div>           
            <div class="row mb-1 p-1">
                <div class="d-flex align-items-center">
                    <label asp-for="ProjectSummary" class="me-2" style="min-width: 150px;"></label>
                    <textarea asp-for="ProjectSummary" class="form-control flex-grow-1" rows="1" placeholder="Short Summary"></textarea>
                </div>
                <span asp-validation-for="ProjectSummary" class="text-danger"></span>
            </div>
            <div class="p-1">
                <div class="row mb-3 p-1">
                    <div class="d-flex align-items-center">
                        <label asp-for="ProjectDescription" class="me-2" style="min-width: 150px;"></label>
                        <textarea asp-for="ProjectDescription" class="form-control flex-grow-1" rows="4" placeholder="Project Description"></textarea>
                    </div>
                    <span asp-validation-for="ProjectDescription" class="text-danger"></span>
                </div>
            </div>

            <!-- Row for ProjectState and ProjectStartDate on the left, ProjectDueDate and ProjectCompletedDate on the right -->
            <div class="p-1">
                <div class="row mb-1 p-1">
                    <!-- Left side with ProjectState and ProjectStartDate -->
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <label asp-for="ProjectState" class="me-2" style="min-width: 150px;"></label>
                            <div class="col-md-6"> <!-- Adjust the column width as needed -->
                                <select asp-for="ProjectState" class="form-select form-control">
                                    <option value="">Select a state</option>
                                    <option value="WorkingInProgress">Working in Progress</option>
                                    <option value="Waiting">Waiting</option>
                                    <option value="OnHold">On Hold</option>
                                    <option value="Complete">Complete</option>
                                    <option value="Canceled">Canceled</option>
                                </select>
                            </div>
                        </div>
                        <span asp-validation-for="ProjectState" class="text-danger"></span>

                        <div class="d-flex align-items-center">
                            <label asp-for="ProjectStartDate" class="me-2" style="min-width: 150px;"></label>
                            <!-- HTML for Datepicker -->
                            <div class="col-md-6">
                                <div class="input-group date">
                                    <input asp-for="ProjectStartDate" type="date" class="form-control" placeholder="mm/dd/yyyy" />
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="ProjectStartDate" class="text-danger"></span>
                    </div>

                    <!-- Right side with ProjectDueDate and ProjectCompletedDate -->
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3 justify-content-end">
                            <label asp-for="ProjectDueDate" class="me-2" style="min-width: 150px;"></label>
                            <div class="col-md-6">
                                <div class="input-group date">
                                    <input asp-for="ProjectDueDate" type="date" class="form-control" placeholder="mm/dd/yyyy" />
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="ProjectDueDate" class="text-danger"></span>

                        <div class="d-flex align-items-center justify-content-end">
                            <label asp-for="ProjectCompletedDate" class="me-2" style="min-width: 150px;"></label>
                            <div class="col-md-6">
                                <div class="input-group date">
                                    <input asp-for="ProjectCompletedDate" type="date" class="form-control" placeholder="mm/dd/yyyy" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mb-3 p-1">
                <div class="col-md-12 d-flex justify-content-center">
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-secondary form-control">
                            <i class="bi bi-floppy"></i>  Update
                        </button>
                    </div>
                </div>
            </div>
        </form>

        <!--the Javascript is on the Detail page-->
        <form action="">
            <div class="">
                <div class="row mb-3 p-0">
                    <div class="d-flex align-items-center">
                        <label class="me-2" style="min-width: 150px;">Tasks</label>
                        <select class="form-select form-control flex-grow-1" id="taskDropdown">
                            <option value="">---Select a task---</option>
                            @foreach (var task in Model.ProjectTasks)
                            {
                                <option value="@task.Id">
                                    @task.ProjectTaskName
                                </option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </form>

        <!-- Button to trigger modal -->
        @* <div class="row mb-3 p-1">
            <div class="col-md-12 d-flex justify-content-center">
                <div class="col-md-4">
                    <button type="button" title="Add new task" class="btn btn-secondary form-control " data-bs-toggle="modal" 
                            data-bs-target="#newTaskModal"><i class="bi bi-plus-square"></i> New Task</button>
                </div>
            </div>
        </div> *@
        <!-- Button to trigger modal bring the Project Id to _CreateModal -->
        <div class="row mb-3 p-1">
            <div class="col-md-12 d-flex justify-content-center">
                <div class="col-md-4">
                    <button type="button" title="Add new task" class="btn btn-secondary form-control" 
                            data-bs-toggle="modal" data-bs-target="#newTaskModal" 
                            data-project-id="@Model.Id">
                        <i class="bi bi-plus-square"></i> New Task
                    </button>
                </div>
            </div>
        </div>

        <!-- Modal placeholder (empty initially) -->
        <div id="newTaskModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="newTaskModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="newTaskModalLabel">New Task</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Content will be loaded dynamically here -->
                        <p>Loading...</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>