@model QuoteView
@{
    ViewData["Title"] = "Quote Admin";
    var quoteCollections = Model.QuoteCollections;
    var activeIndex = "active";
}
<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card mb-3">
            <h1 class="card-header">Quote Collection</h1>
            @foreach(var item in quoteCollections)
            {
                @if(activeIndex == "active")
                {
                    activeIndex = "non-active";
                }
                else{
                    activeIndex = "active";
                }
                <div class="list-group list-group-flush">
                    <div class="list-group-item flex-column align-items-start @(activeIndex == "active" ? "active" : "")">
                        <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">ID: @item.Id</h5>
                        <small>
                            <a  asp-area="Admin" asp-controller="QuoteAdmin" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-area="Admin" asp-controller="QuoteAdmin"  asp-action="Create" class="btn btn-primary mx-2"> 
                                <i class="bi bi-plus-square"></i>
                            </a>
                            <a asp-area="Admin" asp-controller="QuoteAdmin" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"> 
                                <i class="bi bi-trash3"></i>
                            </a>
                        </small>
                        </div>
                        <p class="mb-1">@item.Quote</p>
                        <small>by - @item.Author</small>
                    </div>
                </div>
                
            }
            @* <div class="card-footer text-muted">
                2 days ago
            </div> *@
        </div>
    </div>
</div>